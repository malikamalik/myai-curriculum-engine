{
  "version": 2,
  "framework": null,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*\\.(html|css|js|ico|png|jpg|svg))$",
      "dest": "/public/$1"
    },
    {
      "src": "/",
      "dest": "/public/lesson-builder.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1.html"
    }
  ]
}
