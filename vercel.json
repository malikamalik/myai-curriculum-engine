{
  "version": 2,
  "installCommand": "cd api && npm install",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/**"]
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "^/$",
      "dest": "/public/lesson-builder.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
